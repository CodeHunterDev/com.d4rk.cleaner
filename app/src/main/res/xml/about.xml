<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/miscellaneous_about"
    android:key="about">
    <Preference
        android:title="@string/about_github_link"
        android:icon="@drawable/ic_github"
        android:key="github_link">
        <intent android:action="android.intent.action.VIEW"
            android:data="https://github.com/D4rK7355608/com.d4rk.cleaner"/>
    </Preference>
    <Preference
        android:title="@string/about_play_store"
        android:icon="@drawable/ic_play_store"
        android:key="play_store">
        <intent android:action="android.intent.action.VIEW"
            android:data="https://play.google.com/store/apps/details?id=com.d4rk.cleaner"/>
    </Preference>
    <Preference
        android:title="@string/about_developer"
        android:icon="@drawable/ic_dev"
        android:summary="@string/app_d4rk"/>
    <Preference
        android:title="@string/app_d4rk"
        android:key="D4rK"
        android:icon="@drawable/ic_d4rk"
        android:summary="@string/about_d4rk_description">
        <intent android:action="android.intent.action.VIEW"
            android:data="https://www.youtube.com/channel/UCLDi-rmSRry0pNL-oVvGJAw"/>
    </Preference>
    <Preference android:title="@string/about_michael_tutorials"
        android:key="patreonSupport"
        android:icon="@drawable/ic_michael_tutorials"
        android:summary="@string/about_michael_tutorials_description">
        <intent android:action="android.intent.action.VIEW"
            android:data="https://youtube.com/c/MichaelTutorials"/>
    </Preference>
    <Preference android:title="@string/about_gamejolt"
        android:key="gamejolt"
        android:icon="@drawable/ic_gamejolt"
        android:summary="@string/about_gamejolt_description">
        <intent android:action="android.intent.action.VIEW"
            android:data="https://gamejolt.com/@D4rK_S-A-D"/>
    </Preference>
    <Preference
        android:title="@string/about_deviantart"
        android:key="deviantart"
        android:summary="@string/about_deviantart_description"
        android:icon="@drawable/ic_deviantart">
        <intent android:action="android.intent.action.VIEW"
            android:data="https://www.deviantart.com/d4rk7355608"/>
    </Preference>
    <Preference
        android:title="@string/about_app_version"
        android:icon="@drawable/ic_app"
        android:summary="@string/about_app_version_code"/>
    <Preference
        android:title="@string/about_special_thanks"
        android:icon="@drawable/ic_contribute"
        android:summary="@string/about_supporters"/>
    <Preference
        android:title="@string/about_privacy_policy"
        android:icon="@drawable/ic_privacy">
        <intent android:action="android.intent.action.VIEW"
            android:data="https://cdn.rawgit.com/TheRedSpy15/LTECleanerFOSS/d9522c76/privacy_policy.html"/>
    </Preference>
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="firebase"
        android:icon="@drawable/ic_firebase"
        android:persistent="true"
        android:summary="Help me to improve app using firebase logs."
        android:title="Firebase"/>
</PreferenceScreen>