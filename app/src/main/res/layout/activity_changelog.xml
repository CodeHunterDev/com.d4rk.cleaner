<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/recommendedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false">
            <androidx.appcompat.widget.AppCompatEditText
                android:background="@color/colorPrimary"
                android:isScrollContainer="true"
                android:editable="false"
                android:focusable="false"
                android:scrollbars="vertical"
                android:gravity="center_horizontal"
                android:text="@string/changelog"
                android:textIsSelectable="false"
                tools:ignore="Deprecated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="bottom|center"
        app:srcCompat="@drawable/ic_d4rk"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:rotation="@android:integer/config_longAnimTime"
        app:srcCompat="@drawable/ic_square_outline"
        android:layout_marginStart="6dp"
        android:layout_marginTop="24dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:rotation="@android:integer/status_bar_notification_info_maxnum"
        app:srcCompat="@drawable/ic_square_outline"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="300dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:rotation="@android:integer/status_bar_notification_info_maxnum"
        app:srcCompat="@drawable/ic_square_outline"
        android:layout_marginStart="60dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-80dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:rotation="@android:integer/status_bar_notification_info_maxnum"
        app:srcCompat="@drawable/ic_vn_down_solid"
        android:layout_marginStart="210dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-90dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="160dp"
        android:rotation="@android:integer/config_longAnimTime"
        app:srcCompat="@drawable/ic_vn_back_solid" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:rotation="@android:integer/status_bar_notification_info_maxnum"
        app:srcCompat="@drawable/ic_circle"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="6dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="top"
        android:rotation="@android:integer/status_bar_notification_info_maxnum"
        app:srcCompat="@drawable/ic_circle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="630dp"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:layout_marginEnd="-25dp"
        android:layout_marginTop="199dp"
        android:rotation="@android:integer/status_bar_notification_info_maxnum"
        app:srcCompat="@drawable/ic_triangle"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="start|left"
        app:srcCompat="@drawable/ic_triangle"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="500dp"
        tools:ignore="RtlHardcoded"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="end"
        android:layout_marginEnd="-70dp"
        android:layout_marginTop="333dp"
        android:rotation="@android:integer/status_bar_notification_info_maxnum"
        app:srcCompat="@drawable/ic_square"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="end"
        android:layout_marginEnd="-99dp"
        android:layout_marginTop="440dp"
        app:srcCompat="@drawable/ic_roundline"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="69dp"
        android:layout_height="69dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="0dp"
        android:rotation="@android:integer/status_bar_notification_info_maxnum"
        app:srcCompat="@drawable/ic_triangle_blue"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="bottom|right|end"
        android:layout_marginEnd="-60dp"
        android:layout_marginBottom="-69dp"
        android:rotation="@android:integer/status_bar_notification_info_maxnum"
        app:srcCompat="@drawable/ic_triangle_blue"
        tools:ignore="RtlHardcoded"/>
    <ProgressBar
        android:id="@+id/pbLoading"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>
</com.google.android.material.card.MaterialCardView>